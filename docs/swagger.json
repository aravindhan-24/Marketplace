{
  "openapi": "3.0.3",
  "info": {
    "title": "MarketPlace",
    "description": "APIs for uploading marketplace templates, seller mappings, CSV files, validation, and authentication",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "BasicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  },
  "paths": {
    "/v1": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "Server is running",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/token": {
      "get": {
        "summary": "Get access token",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "creadentials": {
                      "type": "string",
                      "description": "JWT token",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/template": {
      "post": {
        "summary": "Upload marketplace template",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Template uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Template uploaded successfully"
                    },
                    "templateId": {
                      "type": "integer",
                      "example": 1
                    },
                    "fileId": {
                      "type": "integer",
                      "example": 1
                    },
                    "template_name": {
                      "type": "string",
                      "example": "MYNTRA"
                    },
                    "version": {
                      "type": "string",
                      "example": "1.0"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "get": {
        "summary": "Get template by marketplace name",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "marketplace_name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "MYNTRA"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Template fetched successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "marketplace": {
                      "type": "string",
                      "example": "MYNTRA"
                    },
                    "template": {
                      "type": "object",
                      "properties": {
                        "templateName": {
                          "type": "string",
                          "example": "MYNTRA"
                        },
                        "version": {
                          "type": "string",
                          "example": "1.0"
                        },
                        "fields": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "object",
                            "properties": {
                              "required": {
                                "type": "boolean"
                              },
                              "type": {
                                "type": "string"
                              },
                              "maxLen": {
                                "type": "integer",
                                "nullable": true
                              },
                              "min": {
                                "type": "number",
                                "nullable": true
                              },
                              "unique": {
                                "type": "boolean",
                                "nullable": true
                              },
                              "allowed": {
                                "type": "array",
                                "items": {
                                  "type": "string"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/uploadfile": {
      "post": {
        "summary": "Upload seller CSV file",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "parameters": [
          {
            "name": "seller_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File uploaded successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "csvUploadId": {
                      "type": "integer",
                      "example": 1
                    },
                    "fileId": {
                      "type": "integer",
                      "example": 2
                    },
                    "headers": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "rowCount": {
                      "type": "integer",
                      "example": 10
                    },
                    "sampleRows": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/sellermapping": {
      "post": {
        "summary": "Upload seller mapping file",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "parameters": [
          {
            "name": "seller_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "template_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Seller mapping file uploaded",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "mapping_id": {
                      "type": "integer",
                      "example": 1
                    },
                    "mapping_file_id": {
                      "type": "integer",
                      "example": 3
                    },
                    "template_id": {
                      "type": "integer",
                      "example": 1
                    },
                    "marketplace": {
                      "type": "string",
                      "example": "MYNTRA"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/v1/mapping": {
      "post": {
        "summary": "Validate mapping and apply template rules",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "parameters": [
          {
            "name": "seller_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "mapping_file_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 3
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Mapping processed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "seller_id": {
                      "type": "string",
                      "example": "1"
                    },
                    "mapping_file_id": {
                      "type": "integer",
                      "example": 3
                    },
                    "total": {
                      "type": "integer",
                      "example": 10
                    },
                    "valid": {
                      "type": "integer",
                      "example": 0
                    },
                    "errors": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "row": {
                            "type": "integer"
                          },
                          "valid": {
                            "type": "boolean"
                          },
                          "errors": {
                            "type": "object",
                            "additionalProperties": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
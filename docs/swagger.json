{
  "openapi": "3.0.3",
  "info": {
    "title": "MarketPlace",
    "description": "APIs for uploading Marketplace templates, seller mappings, files, and authentication",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000"
    }
  ],
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      },
      "BasicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  },
  "paths": {
    "/v1": {
      "get": {
        "summary": "Health check",
        "description": "Used to verify server is up and running",
        "responses": {
          "200": {
            "description": "Server is running",
            "content": {
              "application/json": {
                "example": {
                  "status": "ok"
                }
              }
            }
          }
        }
      }
    },
    "/token": {
      "post": {
        "summary": "Get access token",
        "description": "Generates JWT token using Basic authentication",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Token generated successfully",
            "content": {
              "application/json": {
                "example": {
                  "access_token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                  "token_type": "bearer",
                  "expires_in": 3600
                }
              }
            }
          }
        }
      }
    },
    "/v1/template": {
      "post": {
        "summary": "Upload marketplace template",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Template uploaded successfully"
          }
        }
      },
      "get": {
        "summary": "Get template by marketplace",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "marketplace_name",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "MYNTRA"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Template fetched successfully"
          }
        }
      }
    },
    "/v1/uploadfile": {
      "post": {
        "summary": "Upload seller CSV file",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "parameters": [
          {
            "name": "seller_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "File uploaded successfully"
          }
        }
      }
    },
    "/v1/sellermapping": {
      "post": {
        "summary": "Upload seller mapping file",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "parameters": [
          {
            "name": "seller_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "template_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Seller mapping file uploaded"
          }
        }
      }
    },
    "/v1/mapping": {
      "post": {
        "summary": "Process mapping for seller, apply validation checks",
        "security": [
          {
            "BasicAuth": []
          }
        ],
        "parameters": [
          {
            "name": "seller_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 1
            }
          },
          {
            "name": "mapping_file_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "integer",
              "example": 3
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Mapping processed successfully"
          }
        }
      }
    }
  }
}